<Window x:Class="DigitalSignClient.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập - Quản Lý Chữ Ký Số" 
        Height="600" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Height="120">
            <StackPanel VerticalAlignment="Center">
                <Viewbox Width="50" Height="50" HorizontalAlignment="Center">
                    <Canvas Width="24" Height="24">
                        <Path Fill="White" Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="QUẢN LÝ CHỮ KÝ SỐ" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="30,20,30,30" 
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Opacity="0.3" ShadowDepth="2" BlurRadius="10"/>
            </Border.Effect>

            <!-- ✅ Thêm ScrollViewer ở đây -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
                <StackPanel>
                    <TextBlock Text="Đăng nhập" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,20"/>

                    <!-- Username -->
                    <TextBlock Text="Tên đăng nhập" 
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10"
                             FontSize="14"
                             BorderBrush="#DDD"
                             BorderThickness="1"
                             Margin="0,0,0,15">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <!-- Password -->
                    <TextBlock Text="Mật khẩu" 
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 Margin="0,0,0,10"
                                 PasswordChanged="PasswordBox_PasswordChanged">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Login Button -->
                    <Button Content="ĐĂNG NHẬP" 
                            Command="{Binding LoginCommand}"
                            Height="45"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Loading Indicator -->
                    <ProgressBar IsIndeterminate="True" 
                                 Margin="0,15,0,0"
                                 Height="3"
                                 Foreground="#2196F3"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Register Link -->
                    <TextBlock HorizontalAlignment="Center" 
                               Margin="0,15,0,0"
                               FontSize="12">
                        <Hyperlink Foreground="#2196F3">
                            <Run Text="Chưa có tài khoản? Đăng ký ngay"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
