<UserControl x:Class="DigitalSignClient.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Dashboard" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cards -->
            <UniformGrid Grid.Row="0" Rows="1" Columns="4" Margin="0,0,0,20">
                <!-- Total Documents -->
                <Border Background="#2196F3" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,10,0">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="FileDocument" 
                                                    Width="40" 
                                                    Height="40" 
                                                    Foreground="White"
                                                    HorizontalAlignment="Left"/>
                        <TextBlock Text="Tổng văn bản" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="0" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Pending -->
                <Border Background="#FF9800" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,10,0">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="ClockOutline" 
                                                    Width="40" 
                                                    Height="40" 
                                                    Foreground="White"
                                                    HorizontalAlignment="Left"/>
                        <TextBlock Text="Chờ xử lý" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="0" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Approved -->
                <Border Background="#4CAF50" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,10,0">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="CheckCircle" 
                                                    Width="40" 
                                                    Height="40" 
                                                    Foreground="White"
                                                    HorizontalAlignment="Left"/>
                        <TextBlock Text="Đã duyệt" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="0" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Rejected -->
                <Border Background="#F44336" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="CloseCircle" 
                                                    Width="40" 
                                                    Height="40" 
                                                    Foreground="White"
                                                    HorizontalAlignment="Left"/>
                        <TextBlock Text="Từ chối" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="0" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Recent Activity -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Hoạt động gần đây" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    <TextBlock Text="Chưa có hoạt động nào" 
                               Foreground="Gray"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>