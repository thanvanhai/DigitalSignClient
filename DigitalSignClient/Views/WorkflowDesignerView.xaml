<UserControl x:Class="DigitalSignClient.Views.WorkflowDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:nodify="clr-namespace:Nodify;assembly=Nodify"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:DigitalSignClient.ViewModels"
             xmlns:converters="clr-namespace:DigitalSignClient.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:WorkflowDesignerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- ✅ CONVERTERS -->
        <converters:NodeTypeToColorConverter x:Key="NodeTypeToColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Node Colors -->
        <SolidColorBrush x:Key="StartNodeBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="SignNodeBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="ApprovalNodeBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="ParallelNodeBrush" Color="#9C27B0"/>
        <SolidColorBrush x:Key="EndNodeBrush" Color="#F44336"/>

        <!-- ✅ TOOLBAR BUTTON STYLE -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ✅ NODE TYPE BUTTON STYLE -->
        <Style x:Key="NodeTypeButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Node Border Style -->
        <Style x:Key="NodeBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="MinHeight" Value="100"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding NodeType}" Value="start">
                    <Setter Property="BorderBrush" Value="{StaticResource StartNodeBrush}"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#E8F5E9" Offset="0"/>
                                <GradientStop Color="#C8E6C9" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding NodeType}" Value="sign">
                    <Setter Property="BorderBrush" Value="{StaticResource SignNodeBrush}"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#E3F2FD" Offset="0"/>
                                <GradientStop Color="#BBDEFB" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding NodeType}" Value="approval">
                    <Setter Property="BorderBrush" Value="{StaticResource ApprovalNodeBrush}"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFF3E0" Offset="0"/>
                                <GradientStop Color="#FFE0B2" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding NodeType}" Value="parallel">
                    <Setter Property="BorderBrush" Value="{StaticResource ParallelNodeBrush}"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#F3E5F5" Offset="0"/>
                                <GradientStop Color="#E1BEE7" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding NodeType}" Value="end">
                    <Setter Property="BorderBrush" Value="{StaticResource EndNodeBrush}"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFEBEE" Offset="0"/>
                                <GradientStop Color="#FFCDD2" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🎯 TOOLBAR TOP -->
        <Border Grid.Row="0" Background="#1976D2" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎨 Thiết kế Workflow" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding WorkflowName, UpdateSourceTrigger=PropertyChanged}"
                             Width="200"
                             Margin="20,0,0,0"
                             VerticalAlignment="Center"
                             FontSize="14"
                             Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📁 Mới" 
                            Command="{Binding NewWorkflowCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"/>
                    <Button Content="💾 Lưu" 
                            Command="{Binding SaveWorkflowCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Background="#4CAF50"/>
                    <Button Content="✔️ Kiểm tra" 
                            Command="{Binding ValidateWorkflowCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Background="#FF9800"/>
                    <Button Content="🔄 Sắp xếp" 
                            Command="{Binding AutoLayoutCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🧰 TOOLBOX -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🧩 Thêm node:" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold" 
                           Margin="0,0,15,0"/>

                <Button Content="🟢 Start" 
                        Command="{Binding AddNodeCommand}" 
                        CommandParameter="start"
                        Style="{StaticResource NodeTypeButtonStyle}"
                        Background="#E8F5E9"
                        Foreground="#2E7D32"/>

                <Button Content="📝 Phê duyệt" 
                        Command="{Binding AddNodeCommand}" 
                        CommandParameter="approval"
                        Style="{StaticResource NodeTypeButtonStyle}"
                        Background="#FFF3E0"
                        Foreground="#E65100"/>

                <Button Content="✍️ Ký" 
                        Command="{Binding AddNodeCommand}" 
                        CommandParameter="sign"
                        Style="{StaticResource NodeTypeButtonStyle}"
                        Background="#E3F2FD"
                        Foreground="#1565C0"/>

                <Button Content="⚡ Song song" 
                        Command="{Binding AddNodeCommand}" 
                        CommandParameter="parallel"
                        Style="{StaticResource NodeTypeButtonStyle}"
                        Background="#F3E5F5"
                        Foreground="#6A1B9A"/>

                <Button Content="🔴 End" 
                        Command="{Binding AddNodeCommand}" 
                        CommandParameter="end"
                        Style="{StaticResource NodeTypeButtonStyle}"
                        Background="#FFEBEE"
                        Foreground="#C62828"/>
            </StackPanel>
        </Border>

        <!-- 🎨 NODIFY CANVAS - ✅ ĐÃ SỬA -->
        <nodify:NodifyEditor Grid.Row="2"
                             ItemsSource="{Binding Nodes}"
                             Connections="{Binding Connections}"
                             Background="White"
                             GridCellSize="20"
                             DisplayConnectionsOnTop="True"
                             EnableRealtimeSelection="True">

            <!-- 📦 NODE CONTAINER STYLE -->
            <nodify:NodifyEditor.ItemContainerStyle>
                <Style TargetType="nodify:ItemContainer">
                    <Setter Property="Location" Value="{Binding Location, Mode=TwoWay}"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                </Style>
            </nodify:NodifyEditor.ItemContainerStyle>

            <!-- 📦 NODE TEMPLATE -->
            <nodify:NodifyEditor.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:WorkflowNodeViewModel}">
                    <Border Style="{StaticResource NodeBorderStyle}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                              Opacity="0.2" 
                                              BlurRadius="10" 
                                              ShadowDepth="3"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Header -->
                            <Border Background="{Binding NodeType, Converter={StaticResource NodeTypeToColorConverter}}"
                                    CornerRadius="8,8,0,0"
                                    Padding="10,5"
                                    Margin="-15,-15,-15,10">
                                <TextBlock Text="{Binding DisplayName}" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <!-- Role -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="👤 " FontSize="12"/>
                                <TextBox Text="{Binding Role, UpdateSourceTrigger=PropertyChanged}" 
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="12"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Signature Type -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="✍️ " FontSize="12"/>
                                <ComboBox SelectedItem="{Binding SignatureType}"
                                          FontSize="11"
                                          BorderThickness="1"
                                          Width="100">
                                    <ComboBoxItem Content="Nháy"/>
                                    <ComboBoxItem Content="Chính"/>
                                    <ComboBoxItem Content="Lưu trữ"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Description -->
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="40"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,5,0,10"
                                     FontSize="11"
                                     Padding="5"/>

                            <!-- Actions -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="🔗 Kết nối"
                                        Command="{Binding DataContext.StartConnectionCommand, 
                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        FontSize="10"
                                        Padding="5,3"
                                        Background="#E3F2FD"
                                        BorderBrush="#2196F3"
                                        Margin="0,0,5,0"/>

                                <Button Grid.Column="1"
                                        Content="🗑️"
                                        Command="{Binding DataContext.RemoveNodeCommand, 
                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        FontSize="12"
                                        Padding="5,3"
                                        Background="#FFEBEE"
                                        BorderBrush="#F44336"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </nodify:NodifyEditor.ItemTemplate>

            <!-- 🔗 CONNECTION TEMPLATE -->
            <nodify:NodifyEditor.ConnectionTemplate>
                <DataTemplate DataType="{x:Type vm:WorkflowConnectionViewModel}">
                    <nodify:LineConnection Source="{Binding Source.Location}"
                                          Target="{Binding Target.Location}"
                                          Stroke="#2196F3"
                                          StrokeThickness="2"
                                          ArrowSize="10,10"
                                          SourceOffset="90,50"
                                          TargetOffset="90,0">
                        <nodify:LineConnection.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="🗑️ Xóa connection"
                                          Command="{Binding DataContext.RemoveConnectionCommand,
                                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}"/>
                            </ContextMenu>
                        </nodify:LineConnection.ContextMenu>
                    </nodify:LineConnection>
                </DataTemplate>
            </nodify:NodifyEditor.ConnectionTemplate>

        </nodify:NodifyEditor>

        <!-- 📊 STATUS BAR -->
        <Border Grid.Row="3" Background="#263238" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📦 Nodes: " Foreground="White" FontSize="11"/>
                    <TextBlock Text="{Binding Nodes.Count}" Foreground="#4CAF50" FontWeight="Bold" FontSize="11"/>
                    <TextBlock Text="  |  🔗 Connections: " Foreground="White" FontSize="11" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding Connections.Count}" Foreground="#2196F3" FontWeight="Bold" FontSize="11"/>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                           Text="{Binding CurrentWorkflowId, StringFormat='ID: {0}'}" 
                           Foreground="#90A4AE" 
                           FontSize="10"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ⏳ LOADING OVERLAY -->
        <Border Grid.RowSpan="4" 
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳ Đang xử lý..." 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>