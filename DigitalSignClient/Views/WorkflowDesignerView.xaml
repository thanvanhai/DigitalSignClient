<UserControl x:Class="DigitalSignClient.Views.WorkflowDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Workflow List & Controls -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="15">
                    <TextBlock Text="Quản lý Workflow" FontSize="20" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock Text="Danh sách các workflow ký văn bản" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Workflow List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Danh sách Workflow" FontWeight="SemiBold" Margin="5,0,0,10"/>

                        <ListBox ItemsSource="{Binding WorkflowList}" 
                                 SelectedItem="{Binding SelectedWorkflow}"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#DDD" 
                                            BorderThickness="1" 
                                            CornerRadius="5" 
                                            Padding="10"
                                            Margin="0,0,0,8"
                                            Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding DataContext.SelectWorkflowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="{Binding DocumentTypeName}" FontSize="11" Foreground="#666" Margin="0,3,0,0"/>
                                            <TextBlock FontSize="10" Foreground="#999" Margin="0,3,0,0">
                                                <Run Text="Steps:"/>
                                                <Run Text="{Binding Steps.Count}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Create New Workflow Panel -->
                <Border Grid.Row="2" Background="White" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Tạo Workflow mới" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <TextBlock Text="Tên workflow:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding WorkflowName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" 
                                 BorderBrush="#CCC"/>

                        <TextBlock Text="Loại văn bản:" FontSize="12" Margin="0,10,0,5"/>
                        <ComboBox ItemsSource="{Binding DocumentTypes}"
                                  SelectedValue="{Binding SelectedDocumentTypeId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  Padding="8"
                                  BorderBrush="#CCC"/>

                        <Button Content="Tạo Workflow" 
                                Command="{Binding CreateNewWorkflowCommand}"
                                Background="#007ACC" 
                                Foreground="White"
                                Padding="10"
                                Margin="0,15,0,5"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <Button Content="Xóa Workflow" 
                                Command="{Binding DeleteWorkflowCommand}"
                                Background="#DC3545" 
                                Foreground="White"
                                Padding="10"
                                Margin="0,5,0,0"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel: Canvas Designer -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Workflow Designer" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedWorkflow.Name, StringFormat=' - {0}'}" 
                                   FontSize="16" 
                                   Foreground="#666" 
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="💾 Lưu" 
                                Command="{Binding SaveWorkflowCommand}"
                                Background="#28A745" 
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="✓ Validate" 
                                Command="{Binding ValidateWorkflowCommand}"
                                Background="#17A2B8" 
                                Foreground="White"
                                Padding="15,8"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Canvas Area -->
            <Border Grid.Row="1" Background="#FAFAFA">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="WorkflowCanvas" 
                            Width="2000" 
                            Height="1500"
                            Background="White"
                            ClipToBounds="True">

                        <!-- Connections (Lines) -->
                        <ItemsControl ItemsSource="{Binding Connections}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Line X1="{Binding X1}" 
                                          Y1="{Binding Y1}" 
                                          X2="{Binding X2}" 
                                          Y2="{Binding Y2}"
                                          Stroke="#007ACC" 
                                          StrokeThickness="2"
                                          StrokeDashArray="5,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Nodes -->
                        <ItemsControl ItemsSource="{Binding Nodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding NodeType, Converter={StaticResource NodeTypeToColorConverter}}" 
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource SelectedToBorderConverter}}" 
                                            BorderThickness="2"
                                            CornerRadius="8" 
                                            Padding="15,10"
                                            Width="120"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="Node_MouseLeftButtonDown"
                                            MouseMove="Node_MouseMove"
                                            MouseLeftButtonUp="Node_MouseLeftButtonUp">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#888888" 
                                                            Direction="270" 
                                                            ShadowDepth="3" 
                                                            BlurRadius="8" 
                                                            Opacity="0.3"/>
                                        </Border.Effect>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" 
                                                       FontSize="11"
                                                       Foreground="White"
                                                       TextAlignment="Center">
                                                <TextBlock.Text>
                                                    <Binding Path="NodeType" Converter="{StaticResource UpperCaseConverter}"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Role}" 
                                                       FontSize="12" 
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       TextAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding SignatureType}" 
                                                       FontSize="10" 
                                                       Foreground="#EEEEEE"
                                                       TextAlignment="Center"
                                                       Margin="0,3,0,0"/>
                                            <TextBlock Text="{Binding Level, StringFormat='Level: {0}'}" 
                                                       FontSize="9" 
                                                       Foreground="#DDDDDD"
                                                       TextAlignment="Center"
                                                       Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </ScrollViewer>
            </Border>

            <!-- Bottom Panel: Node Controls -->
            <Border Grid.Row="2" Background="White" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Node Type:" FontSize="11" Margin="0,0,0,5"/>
                            <ComboBox SelectedValue="{Binding NewNodeType}" Width="100">
                                <ComboBoxItem Content="Start" IsSelected="False"/>
                                <ComboBoxItem Content="Step" IsSelected="True"/>
                                <ComboBoxItem Content="End" IsSelected="False"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Vai trò:" FontSize="11" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding NewNodeRole, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="150" 
                                     Padding="5"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Loại chữ ký:" FontSize="11" Margin="0,0,0,5"/>
                            <ComboBox SelectedValue="{Binding NewNodeSignatureType}" Width="120">
                                <ComboBoxItem Content="Digital" IsSelected="True"/>
                                <ComboBoxItem Content="Electronic"/>
                                <ComboBoxItem Content="Manual"/>
                            </ComboBox>
                        </StackPanel>

                        <Button Content="➕ Thêm Node" 
                                Command="{Binding AddNodeCommand}"
                                Background="#007ACC" 
                                Foreground="White"
                                Padding="15,8"
                                VerticalAlignment="Bottom"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🔗 Kết nối" 
                                Command="{Binding ConnectNodesCommand}"
                                Background="#FFC107" 
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="🗑️ Xóa Node" 
                                Command="{Binding DeleteNodeCommand}"
                                Background="#DC3545" 
                                Foreground="White"
                                Padding="15,8"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.ColumnSpan="2" 
              Background="#88000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳ Đang xử lý..." 
                           FontSize="20" 
                           Foreground="White" 
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>