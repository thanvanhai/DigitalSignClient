<UserControl x:Class="DigitalSignClient.Views.WorkflowTemplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Workflow Template" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <TextBlock Text="Chức năng đang được phát triển..." 
                       Foreground="Gray"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>